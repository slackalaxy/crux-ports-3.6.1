# Description: A new era of messaging
# URL: https://telegram.org/
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on:

name=telegram
version=3.6.0
release=1
source=(https://updates.tdesktop.com/tlinux/tsetup.${version}.tar.xz
	$name.desktop $name.png)

build() {
	cd Telegram
	install -D -m755 Telegram $PKG/usr/bin/Telegram
	
	mkdir -p $PKG/usr/share/{applications,pixmaps}
	cp -a $SRC/$name.desktop $PKG/usr/share/applications
	cp -a $SRC/$name.png $PKG/usr/share/pixmaps
}
