# Description: an open source MPI-2 implementation
# URL: https://www.open-mpi.org/
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on:

name=openmpi
version=4.1.0
release=1
source=(https://download.open-mpi.org/release/open-mpi/v${version%.*}/$name-$version.tar.bz2)

build() {
	cd $name-$version
	
	./configure --prefix=/usr \
	--enable-mpi1-compatibility \
	--disable-static

	make
	make install DESTDIR=$PKG
}
