# Description: Curses-based user interface library
# URL: https://urwid.org/
# Maintainer: 
# Depends on:

name=python-urwid
version=2.1.2
release=1
source=(https://github.com/urwid/urwid/archive/release-${version}/${name}-${version}.tar.gz)

build() {
	cd urwid-release-$version
	python2 setup.py build
	#tox -e py27
	python2 setup.py install --prefix=/usr --root="${PKG}" -O1 --skip-build
	rm -r "${PKG}"/usr/lib/python*/site-packages/urwid/tests
}
