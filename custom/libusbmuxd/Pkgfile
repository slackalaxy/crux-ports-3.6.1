# Description: Handle usbmux protocol connections with iOS devices
# URL: https://github.com/libimobiledevice/libusbmuxd/
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: libimobiledevice-glue

name=libusbmuxd
version=a9a639d
release=1
source=(https://github.com/libimobiledevice/$name/archive/$version/$name-a9a639d0102b9bbf30fd088e633c793316dbc873.tar.gz)

build() {
	cd $name-${version}*
	
	echo "2.0.2" > .tarball-version
	./autogen.sh --prefix=/usr
	make
	make DESTDIR=$PKG install
	
	rm -f $PKG/{,usr/}lib/*.la
}
