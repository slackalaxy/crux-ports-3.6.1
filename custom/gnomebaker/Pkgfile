# Description: A CD/DVD burning application
# URL: https://sourceforge.net/projects/gnomebaker/
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on:

name=gnomebaker
version=0.6.4
release=1
source=(https://sourceforge.net/projects/gnomebaker/files/gnomebaker/0.6.4/gnomebaker-0.6.4.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
	--sysconfdir=/usr/etc \
	--disable-nls
	
	make
	make DESTDIR=$PKG install
	
	rm -rf $PKG/usr/share/{locale,gnome,omf}
}
