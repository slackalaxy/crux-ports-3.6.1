# Description: Desktop-independent archive manager.
# URL: https://github.com/ib/xarchiver
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: brotli cpio desktop-file-utils graphite2 gtk libglvnd p7zip unrar unzip xorg-libxdamage zip

name=xarchiver
version=0.5.4.17
release=1
source=(https://github.com/ib/$name/archive/$version/$name-$version.tar.gz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
	--enable-gtk2 \
	--libexecdir=/usr/lib/thunar \
	--disable-nls

	make
	make DESTDIR=$PKG install
	
	rm -rf $PKG/usr/share/{doc,locale}
}
